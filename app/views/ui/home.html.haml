%section
  %header
    .well
      %form.form-horizontal
        %h3 Welcome to BitesizeURL!
        %p Enter a URL in the text field below to create a Bitesize URL.
        %br
        %fieldset
          .form-group
            %label.control-label.col-sm-3 URL:
            .col-sm-8
              %input.form-control(type="text")
        %fieldset.actions.form-group
          .col-sm-6.col-md-offset-3
            %input(type="submit" value="Get Bitesize URL" class="btn btn-default")

    %section
      %header
        %h3 Top 100 Visited URLs
      %table.table
        %thead
          %tr
            %th URL
            %th Bitesize URL
            %th Times Visited
        %tbody
          - 8.times do
            %tr
              %td http://example.com/someroute/somenestedroute/1435433566
              %td https://bitesizeurl.herokuapp.com/a
              %td 52
